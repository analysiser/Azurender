<?xml version="1.0" encoding="utf-8"?>

<!-- Scene Description in XML -->
<scene desc="Simple Test Scene - Triangle + Sphere. Based on test.ray by Mark Tomczak" author="Raphael Mun">
  <!-- Background Color and Ambient Light Property -->
  <background>
    <color red="0.0" green="0.0" blue="1.0"/>
    <ambientLight red="0.0" green="0.0" blue="0.4"/>
  </background>

  <!-- Camera Description -->
  <camera fieldOfView="45.0" nearClip="0.1" farClip="100.0">
    <position x="0.0" y="0.0" z="5.0"/>
    <target x="0.0" y="0.0" z="-7.0"/>
    <up x="0.0" y="1.0" z="0.0"/>
  </camera>

  <!-- Light Sources Collection -->
  <light_list>
    <!-- Light Description, Color & Position -->
      <light>
        <color red="0.5" green="0.5" blue="0.5"/>
	<position x="5.0" y="5.0" z="15.0"/>
	<attenuation constant="0.10" linear="0.03" quadratic="0.00"/>
      </light>
  </light_list>

  <!-- Material Type Collection -->
  <material_list>
    <!-- Material Descriptions -->
    <material name="Purple">
      <texture filename=""/>
      <ambient red="0.5" green="0.0" blue="0.5"/>
      <diffuse red="0.5" green="0.0" blue="0.5"/>
      <specular red="0.1" green="0.00" blue="0.1" shininess="2.0"/>
    </material>

    <material name="Red">
      <texture filename=""/>
      <ambient red="1.0" green="0.0" blue="0.0"/>
      <diffuse red="1.0" green="0.0" blue="0.0"/>
      <specular red="0.5" green="0.0" blue="0.0" shininess="5.0"/>
      <transparent red="0.0" green="0.0" blue="0.0"/>
      <reflective red="0.1" green="0.1" blue="0.1"/>
      <refraction_index red="0.0" green="0.0" blue="0.0"/>
    </material>

    <material name="White">
      <texture filename=""/>
      <ambient red="1.0" green="1.0" blue="1.0"/>
      <diffuse red="1.0" green="1.0" blue="1.0"/>
      <specular red="1.0" green="1.0" blue="1.0" shininess="1.0"/>
      <transparent red="0.0" green="0.0" blue="0.0"/>
      <reflective red="0.1" green="0.1" blue="0.1"/>
      <refraction_index red="0.0" green="0.0" blue="0.0"/>
    </material>
  </material_list>

  <!-- List of Scene Objects -->
  <object_list>
    <!-- Sphere Object -->
    <sphere name="sphere0" material="Red" radius="1.0">
      <scale x="1.0" y="1.0" z="1.0"/>
      <rotation x="0.0" y="0.0" z="0.0"/>
      <position x="3.0" y="3.0" z="-5.0"/>
    </sphere>
		
    <!-- Triangle Object -->
    <triangle name="triangle0">
      <scale x="1.0" y="1.0" z="1.0"/>
      <rotation x="0.0" y="0.0" z="0.0"/>
      <position x="0.0" y="0.0" z="0.0"/>

      <!-- First Vertex -->
      <vertex index="0" material="Purple">
        <position x="-2.0" y="-2.0" z="-8.0"/>
	<normal x="-1.0" y="0.0" z="1.0"/>
	<texture u="0.0" v="0.0"/>
      </vertex>

      <!-- Second Vertex -->
      <vertex index="1" material="Red">
	<position x="2.0" y="-2.0" z="-8.0"/>
	<normal x="1.0" y="0.0" z="1.0"/>
	<texture u="0.0" v="0.0"/>
      </vertex>

      <!-- Third Vertex -->
      <vertex index="2" material="White">
	<position x="0.0" y="2.0" z="-8.0"/>
	<normal x="0.0" y="1.0" z="1.0"/>
	<texture u="0.0" v="0.0"/>
      </vertex>
    </triangle>

    <!-- Model Object -->
    <model name="model0" filename="scenes/p51-mustang.ifs" material="Red">
      <scale x="1.0" y="1.0" z="1.0"/>
      <rotation x="0.0" y="0.0" z="0.0"/>
      <position x="0.0" y="0.0" z="0.0"/>
    </model>

  </object_list>
	
</scene>
<!-- End of Scene -->
