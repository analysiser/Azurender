<scene>

    <camera>
        <fov v=".785"/>
        <near_clip v=".01"/>
        <far_clip v="100.0"/>
        <position x="0.0" y="1.0" z="20.0"/>
        <orientation a="0.0" x="0.0" y="1.0" z="0.0"/>
    </camera>

    <background_color r="0.0" g="0.0" b="0.0"/>

    <refractive_index v="1.0"/>

    <ambient_light r="0.2" g="0.2" b="0.2"/>

    <point_light>
        <position x="5.0" y="20.0" z="0.0"/>
        <color r="1.0" g="1.0" b="1.0"/>
        <type v="1.0"/>
        <radius v="6.0"/>
    </point_light>

    <material name="light">
        <refractive_index v="0.0"/>
        <ambient r="1.0" g="1.0" b="1.0"/>
        <diffuse r="1.0" g="1.0" b="1.0"/>
        <specular r="-1.0" g="-1.0" b="-1.0"/>
    </material>

    <sphere material="light">
        <position x="5.0" y="20.0" z="0.0"/>
        <radius v="6.0"/>
        <islight v="1.0"/>
    </sphere>
    
    <material name="white">
        <refractive_index v="0.0"/>
        <ambient r="1.0" g="1.0" b="1.0"/>
        <diffuse r="1.0" g="1.0" b="1.0"/>
    </material>
    
    <mesh name="mech" filename="models/mech.obj"/>

    <model material="white" mesh="mech">
        <position x="10.0" y="10.0" z="10.0"/>
        <scale x="0.1" y="0.1" z="0.1" />
        <orientation a="-1.4" x="1.0" y="1.0" z="1.0"/>
    </model> 

</scene>

